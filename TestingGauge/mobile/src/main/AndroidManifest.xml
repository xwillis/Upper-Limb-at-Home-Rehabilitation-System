<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.nutri_000.testinggauge">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <uses-feature
        android:name="android.bluetooth.le"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/repairappicon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:icon">
        <service android:name=".BleService" />

        <!-- Mqtt Service -->
        <service android:name="org.eclipse.paho.android.service.MqttService" />

        <activity
            android:name=".MainActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <!-- Added from Adafruit's Manifest -->
        <activity
            android:name=".MainActivityA"
            android:label="@string/app_name"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="fullUser">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.nutri_000.testinggauge.MainActivity" />
        </activity>
        <activity
            android:name=".MainHelpActivity"
            android:label="@string/title_activity_mainhelp"
            android:parentActivityName=".MainActivityA"
            android:screenOrientation="fullUser">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.nutri_000.testinggauge.MainActivityA" />
        </activity>
        <activity
            android:name=".InfoActivity"
            android:label="@string/title_activity_info"
            android:parentActivityName=".MainActivityA"
            android:screenOrientation="fullUser">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.nutri_000.testinggauge.MainActivityA" />
        </activity>
        <activity
            android:name=".CommonHelpActivity"
            android:parentActivityName=".InfoActivity"
            android:screenOrientation="fullUser">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.nutri_000.testinggauge.InfoActivity" />
        </activity>
        <activity
            android:name=".UartActivity"
            android:label="@string/title_activity_uart"
            android:screenOrientation="fullUser"
            android:windowSoftInputMode="adjustResize">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.nutri_000.testinggauge.MainActivityA" />
        </activity>
        <activity
            android:name=".settings.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".MainActivityA"
            android:screenOrientation="fullUser" />
        <activity
            android:name=".update.NotificationActivity"
            android:label="@string/dfu_feature_title" />

        <service android:name=".update.DfuService" />

        <activity
            android:name=".settings.ConnectedSettingsActivity"
            android:label="@string/title_activity_connected_settings" />
        <activity
            android:name=".BeaconActivity"
            android:label="@string/title_activity_beacon"
            android:windowSoftInputMode="stateVisible|adjustPan" />
        <activity
            android:name=".settings.MqttUartSettingsActivity"
            android:label="@string/title_activity_mqtt"
            android:parentActivityName=".UartActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.nutri_000.testinggauge.UartActivity" />
        </activity>
        <activity
            android:name=".settings.MqttUartSettingsCodeReaderActivity"
            android:label="@string/title_activity_mqtt_uart_settings_code_reader"
            android:parentActivityName=".settings.MqttUartSettingsActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.nutri_000.testinggauge.settings.MqttUartSettingsActivity" />
        </activity>

        <provider
            android:name=".utils.LegacyCompatFileProvider"
            android:authorities="com.example.nutri_000.testinggauge.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths" />
        </provider>

        <activity android:name=".BicepFlexMeasurement"></activity>
    </application>

</manifest>