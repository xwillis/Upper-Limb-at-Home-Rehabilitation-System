        android:id="@+id/chestAngleYLeft"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="left"
        android:paddingBottom="25dp"
        android:paddingLeft="5dp"
